<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/play_overlay_pressed_light" />
    <item android:state_checked="true" android:drawable="@drawable/play_highlight_overlay_pressed_blue" />
    <item android:state_focused="true" android:state_window_focused="true" android:drawable="@drawable/play_highlight_overlay_focused_blue" />
    <item android:state_window_focused="true" android:state_selected="true" android:drawable="@drawable/play_highlight_overlay_focused_blue" />
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/play_ripple_light" />
        </shape>
    </item>
</selector>
