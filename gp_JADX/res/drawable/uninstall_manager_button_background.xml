<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/play_uninstall_wizard_background_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/play_uninstall_wizard_background_color" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <gradient android:startColor="@color/play_uninstall_wizard_positive_button_disabled_background_color" android:endColor="@color/play_uninstall_wizard_positive_button_disabled_background_color" android:angle="270.0" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/play_uninstall_wizard_background_color" />
        </shape>
    </item>
</selector>
